 <script>
  $(function() {
          $( ".datepicker" ).datepicker();
	    });
 </script>
 <fieldset id="newtrip">
  <legend> Create a New Trip </legend>
  <form><%= form_for @trip do |f| %>
    <div class="row">
      <div class="large-12 columns">
      <%= f.label :name %><t><%= f.text_field :name %></div>
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :description %><t><%= f.text_area :description %></div>
    <div class="row">
    <div class="large-6 columns">
      <%= f.label :starts_at, "Start Date" %>
      <%= f.text_field :starts_at, class: "datepicker" %></div>
    <div class="row">
    <div class="large-6 columns">
      <%= f.label :ends_at, "End Date" %>
      <%= f.text_field :ends_at, class: "datepicker" %></div>
  <div class="alertbutton" ><%= f.submit "Submit" %></form>
<% end %>
