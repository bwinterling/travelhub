 <script>
  $(function() {
          $( ".datepicker" ).datepicker({ dateFormat: "yy-mm-dd" });
      });
 </script>

<%= form_for(@trip) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>
 
      <div class="large-12 columns">
      <%= f.label :starts_on, "Start Date" %>
      <%= f.text_field :starts_on, class: "datepicker" %>

      <%= f.label :ends_on, "End Date" %>
      <%= f.text_field :ends_on, class: "datepicker" %>
      <%= f.submit "Submit", class: "radius button" %>
      </div>
<% end %>
